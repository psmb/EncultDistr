{
    "name": "sfi/encult-distr",
    "description" : "Neos distribution for enculturation.ru",
    "support": {
        "email": "dimaip@gmail.com",
        "issues": "https://github.com/sfi-ru/EncultDistr/issues",
        "source": "https://github.com/sfi-ru/EncultDistr"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/neos": "2.0.x-dev",

        "doctrine/migrations": "@dev",

        "typo3/imagine": "~2.0",
        "typo3/form": "~2.0",
        "typo3/setup": "~2.0",

        "typo3/typo3cr": "2.0.x-dev",
        "typo3/typoscript": "2.0.x-dev",
        "typo3/media": "2.0.x-dev",

        "typo3/flow": "3.0.*@dev",
        "typo3/fluid": "3.0.*@dev",
        "typo3/eel": "3.0.*@dev",
        "typo3/party": "3.0.*@dev",
        "typo3/kickstart": "3.0.*@dev",
        "m12/neos-plugin-dbexport": "^0.2.0"
    },
    "require-dev": {
        "typo3/buildessentials": "3.0.*@beta",
        "mikey179/vfsstream": "1.5.*",
        "phpunit/phpunit": "4.6.*",
        "flowpack/behat": "dev-master"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
